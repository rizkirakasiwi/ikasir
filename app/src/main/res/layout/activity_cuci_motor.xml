<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".cuci_motor">
    <LinearLayout
            android:id="@+id/linearTop"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/txt_sapa"
                android:text="Halo, Anton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/lorem"
                android:text="Lorem ipsum!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
            android:layout_marginTop="50dp"
            app:cardElevation="3dp"
            app:layout_constraintTop_toBottomOf="@id/linearTop"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="12dp"
            android:id="@+id/cardview_pilihkendaraan"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                    app:cardCornerRadius="14dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_width="150dp"
                    android:layout_height="100dp">
                <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/img_motor"
                        android:src="@drawable/motorcycle"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    app:cardCornerRadius="14dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="10dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_width="150dp"
                    android:layout_height="100dp">
                <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/img_mobil"
                        android:src="@drawable/car"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="150dp"
            android:id="@+id/txt_namaPelanggan"
            app:layout_constraintTop_toBottomOf="@id/cardview_pilihkendaraan"
            android:text="Nama pelanggan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/txt_noPolisi"
            app:layout_constraintTop_toBottomOf="@id/txt_namaPelanggan"
            android:text="No. Polisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@id/txt_noPolisi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/rounded_button"
            android:text="Proses"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:id="@+id/btnproses2"
            android:layout_width="200dp"
            android:layout_height="35dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>